<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="270sp"
        android:layout_height="100sp"
        android:src="@drawable/carro"
        android:layout_marginTop="15sp"
        />

    <ImageView
        android:layout_width="270sp"
        android:layout_height="100sp"
        android:src="@drawable/moto"
        android:layout_gravity="right"
        android:layout_marginTop="15sp"
        />
    <TextView
        android:layout_marginLeft="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero de Carros:"
        android:textSize="16sp"
        android:layout_marginTop="150sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginLeft="5sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sitios Disponibles:"
        android:textSize="16sp"
        android:layout_marginTop="180sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero de Motos:"
        android:textSize="16sp"
        android:layout_marginTop="150sp"
        android:layout_marginLeft="310sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sitios Disponibles:"
        android:textSize="16sp"
        android:layout_marginTop="180sp"
        android:layout_marginLeft="310sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione la clase de vehÃ­culo"
        android:textSize="16sp"
        android:layout_marginTop="220sp"

        android:textStyle="bold"/>

    <Spinner
        android:id="@+id/tipoVehiculo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220sp"
        android:layout_gravity="right"
        android:entries="@array/tipo_vehiculo"
        android:layout_marginLeft="5sp"></Spinner>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="255sp">

        <RadioButton
            android:id="@+id/entrada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:text="Entrada"/>

        <RadioButton
            android:id="@+id/salida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220sp"
            android:text="Salida"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300sp"
        android:layout_gravity="center_horizontal"
        android:text="registrar"
        android:background="@color/Black"
        android:textColor="@color/White"/>


</FrameLayout>
</ScrollView>